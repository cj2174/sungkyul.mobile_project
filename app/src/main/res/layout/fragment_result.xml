<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ImgDateMinus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/baseline_play_worra_black_24dp" />

         <TextView
           android:id="@+id/txtDate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAlignment="center"
           android:text="2020-00-00"
           android:textSize="25dp"
           android:layout_weight="6"

         />

        <ImageView
            android:id="@+id/ImgDatePlus"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/baseline_play_arrow_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <DatePicker
        android:id="@+id/DPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/listresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/Linerfun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon01"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="꾹누르시오"
                android:id="@+id/txtActvityname"
                android:textColor="@color/red"
                android:textSize="25sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:text="시간으로 할수 있는건?"
                android:layout_gravity="center"
                android:textSize="25sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorBlue"
                android:text="0일"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/txtDay"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPurple"
                android:text="0시간"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/txtHour"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="0분"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/txtMinute"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2020년 최저임금으로.."
                android:background="#000000"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/txtWage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0원 벌기"
                android:textColor="#00E5FF"
                android:gravity="right"
                android:textSize="40dp"
                android:background="#33808080"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3분 카레 제조"
                android:background="#000000"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/txtCurry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0개 제조"
                android:textColor="#C6FF00"
                android:gravity="right"
                android:textSize="40dp"
                android:background="#33808080"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="노래방에서"
                android:background="#000000"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/txtSing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0곡 부르기"
                android:textColor="#F50057"
                android:gravity="right"
                android:textSize="40dp"
                android:background="#33808080"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="피시방에 있었다면"
                android:background="#000000"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/txtPCRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0원"
                android:textColor="#FFC400"
                android:gravity="right"
                android:textSize="40dp"
                android:background="#33808080"
                />








        </LinearLayout>


    </LinearLayout>


    </FrameLayout>







</LinearLayout>